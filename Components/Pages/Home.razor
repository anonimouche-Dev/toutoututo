@code {
    // Classe Activite
    public class Activite
    {
        public string Nom { get; set; }

        public Activite(string nom)
        {
            Nom = nom;
        }
    }

    // Classe Parcours
    public class Parcours
    {
        public string Nom { get; set; }
        public List<Activite> Activites { get; set; }

        public Parcours(string nom, List<Activite> activites)
        {
            Nom = nom;
            Activites = activites;
        }
    }

    // Liste des parcours pour chiens
    List<Parcours> parcoursPourChiens = new List<Parcours>();
    Parcours parcoursAffiche; // Parcours à afficher

    protected override void OnInitialized()
    {
        string[] activites = {
            "Assis", "Couché", "Rappel", "Marcher au pied", "Sauter à travers un cerceau", "Slalom entre des cônes",
            "Parcours d'obstacles", "Tunnel" , "Rappel avec distraction", "S'asseoir pas bouger",
            "Marcher au pied avec laisse molle", "ne pas manger les friandises ", 
            "Équilibre sur une planche",  "Obstacles variés", 
            "Jeu de cache-cache", "Parcours en hauteur", "Entraînement au rappel", "Sauter par-dessus des haies",
   
       "Marcher à travers des tunnels" 
    };

        var random = new Random();
        for (int i = 0; i < 30; i++)
        {
            var selectedActivites = activites.OrderBy(x => random.Next()).Take(3).ToList();
            parcoursPourChiens.Add(new Parcours($"Parcours Éducatif {i + 1}", selectedActivites.Select(a => new Activite(a)).ToList()));
        }
    }

    void AfficherParcoursAleatoire()
    {
        var random = new Random();
        parcoursAffiche = parcoursPourChiens[random.Next(parcoursPourChiens.Count)];
    }
}